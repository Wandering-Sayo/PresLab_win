@model PresLab.Models.Test

@{
    ViewBag.Title = "Editar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="edit">
        <div class="edit-header">
            <h2>@Html.DisplayFor(model => model.Name)</h2>
            <h4>Edición de Análisis</h4>
        </div>
        <div class="container col-md-10 col-md-offset-1">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TestID)

            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="input-group narrow">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "input-group-addon edit" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control edit" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group narrow">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "input-group-addon edit" })
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control edit" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group narrow">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "input-group-addon edit" })
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control edit" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-default iso-sm common pull-right">
                    <span class="glyphicon glyphicon-floppy-disk"></span>
                </button>
                <a href="@Url.Action("Index", "Test")" class="btn btn-default iso-sm common">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
