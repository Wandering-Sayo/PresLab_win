@model IEnumerable<PresLab.Models.Product>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<a href="@Url.Action("Create", "Product")" class="btn btn-default btn-lg pull-right iso">
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
</a>
   
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tests)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier)
        </td>
        <td>
            @{
                foreach (var test in item.Tests)
                {
                      @test.Name <br />
        }
            }
        </td>
        <td>
            <a href="@Url.Action("Details", "Product", new { id=item.ID })" class="btn btn-default iso-sm">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Edit", "Product" , new { id=item.ID })" class="btn btn-default iso-sm">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Delete", "Product", new { id=item.ID })" class="btn btn-default iso-sm">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
            
        </td>
    </tr>
}

</table>
