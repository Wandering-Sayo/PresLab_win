@model PresLab.Models.Product

@{
    ViewBag.Title = "Detalles";
}



<div class="details">
    <div class="details-header">
        <h2>@Html.DisplayFor(model => model.Type)</h2>
        <h4>Detalle de Producto</h4>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-5">
                <label class="pull-right">
                    @Html.DisplayNameFor(model => model.Category)
                </label>
            </div>
            <div class="col-xs-7">
                <p>
                    @Html.DisplayFor(model => model.Category.Name)
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5">
                <label class="pull-right">
                    @Html.DisplayNameFor(model => model.Brand)
                </label>
            </div>
            <div class="col-xs-7">
                <p>
                    @Html.DisplayFor(model => model.Brand)
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5">
                <label class="pull-right">
                    @Html.DisplayNameFor(model => model.Description)
                </label>
            </div>
            <div class="col-xs-7">
                <p>
                    @Html.DisplayFor(model => model.Description)
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5">
                <label class="pull-right">
                    @Html.DisplayNameFor(model => model.Supplier)
                </label>
            </div>
            <div class="col-xs-7">
                <p>
                    @Html.DisplayFor(model => model.Supplier)
                </p>
            </div>
        </div>
        <div class="container inside-tables">
        <h3 class="details">
            <i class="fa fa-flask" aria-hidden="true"></i>
        </h3>

            <div>
                <table class="table">
                    <tr class="table-header inside-tables details">
                        <th>Nombre</th>
                        <th>Precio</th>
                    </tr>
                    @foreach (var item in Model.Tests)
                    {
                        <tr class="table-data">
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="main">
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        </div>
    </div>
<div>
    <a href="@Url.Action("Edit", "Product" , new { id=Model.ID })" class="btn btn-default iso-sm common pull-right">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    <a href="@Url.Action("Index", "Product")" class="btn btn-default iso-sm common">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    </a>
</div>
