@model PresLab.Models.Product

@{
    ViewBag.Title = "Detalles";
}

<h4>Detalle de producto</h4>

<div>
    <h2>@Html.DisplayFor(model => model.Type)</h2>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayNameFor(model => model.Brand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Supplier)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tests)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                </tr>
                @foreach (var item in Model.Tests)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit", "Product" , new { id=Model.ID })" class="btn btn-default iso-sm">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    <a href="@Url.Action("Index", "Product")" class="btn btn-default iso-sm">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    </a>
</p>
