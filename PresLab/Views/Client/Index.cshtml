@model IEnumerable<PresLab.Models.Client>

@{
    ViewBag.Title = "Clientes";
}

<div class="container index">
    <h2>Clientes</h2>
   
    <table class="table">
        <tr class="table-header inside-tables">
            <th>
                Nombre
            </th>
            <th>
                Descripción
            </th>
            <th>
                <a href="@Url.Action("Create", "Client")" class="btn btn-default btn-lg pull-right iso">
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                </a>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="table-data">
                <td class="main">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Client", new { id=item.ClientID })" class="btn btn-default iso-sm pull-right">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Edit", "Client" , new { id=item.ClientID })" class="btn btn-default iso-sm pull-right">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Details", "Client", new { id=item.ClientID })" class="btn btn-default iso-sm pull-right">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>