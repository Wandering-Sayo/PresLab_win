@model PresLab.Models.Client

@{
    ViewBag.Title = "Details";
}

<div class="details">
    <div class="details-header">
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <h4>Detalle de Cliente</h4>
    </div>

    <div class="container">
        <div class="client">
            <i class="fa fa-user-circle-o" aria-hidden="true"></i>
        </div>
            <div class="row">
                <div class="col-xs-5">
                    <label class="pull-right">
                        @Html.DisplayNameFor(model => model.Email)
                    </label>
                </div>
                <div class="col-xs-7">
                    <p>
                        @Html.DisplayFor(model => model.Email)
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-5">
                    <label class="pull-right">
                        Descripción
                    </label>
                </div>
                <div class="col-xs-7">
                    <p>
                        @Html.DisplayFor(model => model.Description)
                    </p>
                </div>
            </div>
    </div>
</div>
<div>
    <a href="@Url.Action("Edit", "Client" , new { id=Model.ClientID })" class="btn btn-default iso-sm pull-right">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    <a href="@Url.Action("Index", "Client")" class="btn btn-default iso-sm return">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    </a>
</div>
